        brief: "ViewBrief",
        status: "In Progress",
        statusVariant: "info",
      },
      {
        id: "00003",
        brandName: "Brand3",
        subBrand: "SubBrand3",
        flavour: "Flavour3",
        packType: "Type3",
        packSize: "Size 3ml",
        packCode: "Code3",
        deadline: "2024/02/01",
        brief: "ViewBrief",
        status: "DraftSaved",
        statusVariant: "secondary",
