    updatedPOs[index].invoiceStatus = newStatus;
    setPurchaseOrders(updatedPOs);
  };


  const { estimates, loading, error } = useSelector((state) => state.costEstimates);
  console.log("Cost Estimates:", estimates.costEstimates);

